<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorPrimaryRipple</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#FF4081</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/mainactivity_text</item>
        <item name="spinBars">true</item>
    </style>
    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
    <style name="Theme_Dialog" parent="@android:style/Theme.Light">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="myToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="NavigationView" parent="@style/Base.Theme.AppCompat">
        <item name="android:listDivider">@color/linegrey</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="@style/ThemeOverlay.AppCompat.Light" />

    <style name="FCMDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down_scale</item>
        <item name="android:windowExitAnimation">@anim/slide_down_scale</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="spinnerItemStyle">
    </style>
    <style name="spinnerDropDownItemStyle">
    </style>

    <style name="NumberProgressBar_Custome1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="progress_current">0</item>
        <item name="progress_max">100</item>
        <item name="progress_reached_bar_height">4.5dip</item>
        <item name="progress_reached_color">@color/black</item>
        <item name="progress_text_color">@color/black</item>
        <item name="progress_text_size">9sp</item>
        <item name="progress_unreached_bar_height">2.25dip</item>
        <item name="progress_unreached_color">@color/dark_ligh_color</item>
    </style>

</resources>
