<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape android:shape="ring" android:innerRadiusRatio="5.5" android:thicknessRatio="70.0" android:useLevel="false">
            <gradient android:startColor="@color/colorAccent" android:endColor="@color/colorAccent" android:type="sweep" android:centerColor="@color/colorAccent" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0" android:pivotX="50.0%" android:pivotY="50.0%">
            <shape android:shape="ring" android:innerRadiusRatio="5.5" android:thicknessRatio="70.0" android:useLevel="true">
                <rotate android:fromDegrees="270.0" android:toDegrees="270.0" android:pivotX="50.0%" android:pivotY="50.0%" />
                <gradient android:startColor="#ffffffff" android:endColor="#ffffffff" android:type="sweep" android:centerColor="#ffffffff" />
            </shape>
        </rotate>
    </item>
</layer-list>